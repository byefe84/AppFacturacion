<Window x:Class="FacturacionDobleEje.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:FacturacionDobleEje"
        Title="Facturación - Doble Eje Construcción" Height="600" Width="1300"
        Icon="pack://application:,,,/Logo.ico">
    <Window.Resources>
        <local:FirstLineConverter x:Key="FirstLineConverter"/>
    </Window.Resources>
    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*" />
            <ColumnDefinition Width="3*" />
        </Grid.ColumnDefinitions>

        <!-- Columna izquierda: materiales -->
        <GroupBox Header="Materiales" Grid.Column="0" Margin="5">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <DataGrid x:Name="dgMateriales" AutoGenerateColumns="False" CanUserAddRows="False"
                          SelectionMode="Single" CellEditEnding="dgMateriales_CellEditEnding">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="40" IsReadOnly="True"/>
                        <DataGridTextColumn Header="Nombre" Binding="{Binding Name, Mode=TwoWay, UpdateSourceTrigger=LostFocus}" Width="125"/>
                        <DataGridTextColumn Header="Descripción" Width="150" IsReadOnly="True">
                            <DataGridTextColumn.Binding>
                                <Binding Path="Description" Converter="{StaticResource FirstLineConverter}"/>
                            </DataGridTextColumn.Binding>

                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="TextTrimming" Value="CharacterEllipsis"/>
                                    <Setter Property="ToolTip">
                                        <Setter.Value>
                                            <TextBlock Text="{Binding Description}"
                                                TextWrapping="Wrap"
                                                MaxWidth="300"/>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>
                        <DataGridTextColumn Header="Precio (€)" Binding="{Binding UnitPrice, StringFormat=F2, Mode=TwoWay, UpdateSourceTrigger=LostFocus}" Width="90">

                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="TextAlignment" Value="Right"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>

                        </DataGridTextColumn>
                        <DataGridTextColumn Header="Unidad" Binding="{Binding Unit, Mode=TwoWay, UpdateSourceTrigger=LostFocus}" Width="70.5"/>
                    </DataGrid.Columns>
                </DataGrid>

                <Grid Grid.Row="1" Margin="0,8,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="3*"/>
                        <ColumnDefinition Width="1*"/>
                    </Grid.ColumnDefinitions>

                    <Button Grid.Column="0" Content="Añadir seleccionado a presupuesto" HorizontalAlignment="Stretch" Margin="0,0,8,0" Click="BtnAddSelected_Click"/>

                    <Button Grid.Column="1" Content="Nuevo material" HorizontalAlignment="Stretch" Click="BtnNuevoMaterial_Click"/>
                </Grid>
            </Grid>
        </GroupBox>

        <!-- Columna derecha: cliente + presupuesto -->
        <GroupBox Header="Presupuesto / Factura" Grid.Column="1" Margin="5">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <StackPanel Orientation="Horizontal" Margin="8">
                    <TextBlock VerticalAlignment="Center" Text="Cliente:" Margin="0,0,8,0"/>
                    <ComboBox x:Name="cbClientes" DisplayMemberPath="Name" Width="250"/>
                    <Button Content="+" Width="25" Margin="8,0,0,0" Click="BtnNuevoCliente_Click"/>
                    <TextBlock VerticalAlignment="Center" Text=" Descuento (%)" Margin="12,0,4,0"/>
                    <TextBox x:Name="txtDiscount" Width="60" TextChanged="TxtDiscount_Changed"/>
                    <TextBlock VerticalAlignment="Center" Text=" IVA (%)" Margin="12,0,4,0"/>
                    <TextBox x:Name="txtIVA" Width="60" Text="21" TextChanged="TxtIVA_Changed"/>
                </StackPanel>

                <DataGrid x:Name="dgLineas" Grid.Row="1" AutoGenerateColumns="False" CanUserAddRows="False" Margin="8" CellEditEnding="dgLineas_CellEditEnding" PreviewTextInput="dg_PreviewTextInput" DataObject.Pasting="dg_Pasting">
                    <DataGrid.ContextMenu>
                        <ContextMenu>
                            <MenuItem Header="Eliminar línea" Click="EliminarLinea_Click"/>
                        </ContextMenu>
                    </DataGrid.ContextMenu>
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Material" Binding="{Binding Material.Name}" Width="*" IsReadOnly="True" />
                        <DataGridTextColumn Header="Cantidad" Binding="{Binding Quantity, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Width="90"/>
                        <DataGridTextColumn Header="Precio u. (€)" Binding="{Binding UnitPrice}" Width="100" IsReadOnly="True"/>
                        <DataGridTextColumn Header="Beneficio (%)" Binding="{Binding ProfitPercent, UpdateSourceTrigger=PropertyChanged}" Width="110"/>
                        <DataGridTextColumn Header="Descuento (%)" Binding="{Binding DiscountPercent, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Width="110"/>
                        <DataGridTextColumn Header="Importe (€)" Binding="{Binding Amount, StringFormat=F2}" Width="100" IsReadOnly="True"/>
                    </DataGrid.Columns>
                </DataGrid>

                <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="8">
                    <StackPanel Margin="0,0,20,0">
                        <TextBlock Text="{Binding SubtotalText}" FontWeight="Bold" x:Name="tbSubtotal" />
                        <TextBlock Text="{Binding IVAText}" FontWeight="Bold" x:Name="tbIVA" />
                        <TextBlock Text="{Binding TotalText}" FontWeight="Bold" x:Name="tbTotal" />
                    </StackPanel>
                    <StackPanel Orientation="Vertical">
                        <Button Content="Generar PDF (Presupuesto)" Width="180" Margin="0,0,0,6" Click="BtnGenerarPdf_Click"/>
                        <Button Content="Generar PDF (Factura)" Width="180" Margin="0,0,0,6" Click="BtnGenerarPdfFactura_Click"/>
                        <Button Content="Limpiar" Width="180" Click="BtnLimpiar_Click"/>
                    </StackPanel>
                </StackPanel>
            </Grid>
        </GroupBox>
    </Grid>
</Window>
